<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.RadioFinder" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/almost_black</item>
        <item name="colorPrimaryDark">@color/almost_black</item>
        <item name="colorAccent">@color/neon_pink</item>
        <item name="android:windowBackground">@color/dark_gray</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="background">@color/almost_black</item>
        <item name="titleTextColor">@color/neon_blue</item>
        <item name="subtitleTextColor">@color/neon_blue</item>
    </style>

    <style name="CircularImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/circular_button_background</item>
        <!-- other style attributes -->
    </style>
</resources>